# Gemfile - AI Gateway Service
source 'https://rubygems.org'

ruby '3.4.6'

# Servidor web
gem 'sinatra'
gem 'sinatra-contrib'
gem 'puma'
gem 'dotenv'
gem 'rack-cors'

# HTTP Client
gem 'httparty'
gem 'faraday'

# JSON
gem 'json'

# Procesamiento de archivos
gem 'mini_magick'        # Im√°genes
gem 'rtesseract'         # OCR
